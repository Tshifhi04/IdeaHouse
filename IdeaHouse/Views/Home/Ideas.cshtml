@model IEnumerable<Idea>

@{
    ViewData["Title"] = "Idea List";
}

<h2>These are your categories</h2>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <p class="card-text">@item.Name</p>
                        <p class="card-text">@item.Description</p>

                        @if (item.Category != null)
                        {
                            <h2>Category Details</h2>
                            <p><strong>Category Id:</strong> @item.Category.Id</p>
                            <p><strong>Category Name:</strong> @item.Category.Name</p>
                            <p><strong>Category Description:</strong> @item.Category.Description</p>
                        }
                        else
                        {
                            <p>No category assigned.</p>
                        }


                        <p class="card-text">@item.Rating</p>
                        <p class="card-text">@item.Date</p>
                        <p class="card-text">@item.Status</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a type="button" asp-controller="Home" asp-action="IdeaDetail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Manage</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <section style="position: relative; color: aqua; width: 200px; height: 20px; margin-top: 30%;">
        <a href="@Url.Action("AddIdea", "Home")">
            <button class="btn btn-outline-success btn-xl" style="border: groove">Add an Idea</button>
        </a>
    </section>
</div>
