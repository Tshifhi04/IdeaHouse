
@using IdeaHouse.Data.Enum;
@using IdeaHouse.ViewModel
@model Idea

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Idea</title>
</head>
<body>
    <h1>Create Idea</h1>
    <form method="post" asp-action="AddIdea" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Name your idea">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" placeholder="Describe your idea">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <lable asp-for="projectCategory">Idea Status</lable>
            <select asp-for="Status" asp-items="@Html.GetEnumSelectList<Status>()" class="form-control">
                <option>--Select</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control" placeholder="Idea completion date">
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rating"></label>
            <div class="rating">
                <input type="radio" id="star5" name="Rating" value=5 @(Model?.Rating == 5 ? "checked" : "")>

                <label for="star5"></label>
                <input type="radio" id="star4" name="Rating" value=4 @(Model?.Rating == 4 ? "checked" : "")>
                <label for="star4"></label>
                <input type="radio" id="star3" name="Rating" value=3 @(Model?.Rating == 3 ? "checked" : "")>
                <label for="star3"></label>
                <input type="radio" id="star2" name="Rating" value=2 @(Model?.Rating == 2 ? "checked" : "")>
                <label for="star2"></label>
                <input type="radio" id="star1" name="Rating" value=1 @(Model?.Rating == 1 ? "checked" : "")>
                <label for="star1"></label>
            </div>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <!-- Existing code... -->
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId" asp-items="Model.CategoryList">
            <option value="">-- Select Category --</option>
        </select>


        <!-- Remaining code... -->









        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</body>
</html>
