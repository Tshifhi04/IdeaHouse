@using IdeaHouse;
@using IdeaHouse.Models
@model Category



<!Doctype html>
<html lang="en">
<head>



    <body class="text-center">


        <main class="form-signin" style="margin-top:150px">


            <form method="post" asp-action="addCategory" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @*            <img class="mb-4" src="/docs/5.0/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
                *@


                <h1 class="whitefont">Lets create a category here</h1>


                <div class="form-group">
                    <input asp-for="Name" class="form-control" placeholder="Name of the Category">
                    <label asp-for="Name" class="form-control-label" class="text-danger" />
                    @* <label for="floatingInput">Email address</label>*@
                </div>
                <div class="form-group">
                    <input asp-for="Description" class="form-control" placeholder="Describe the Category">
                    <label asp-for="Description" class="form-control-label" class="text-danger" />
                    @*  <label for="floatingPassword">Password</label>*@
                </div>
               
               

               
                <button class="not-so-rounded-button" asp-area="" asp-action="addCategory" asp-controller="Home">Create one!</button><br />



            </form>
         

            <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
        </main>



    </body>
</head>
</html>